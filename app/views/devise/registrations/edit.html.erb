<div class="min-w-screen min-h-screen gradient-3 flex items-center justify-center px-5 py-5">
    <div class="bg-white text-gray-500 rounded-3xl shadow-xl w-full overflow-hidden" style="max-width:1000px; border: 1px solid black">
        <div class="md:flex w-full">
            <div class="w-full md:w-1/2 py-10 px-5 md:px-10">
              <%= link_to "< Back", :back, class:"text-black bg-gray-400 hover:bg-gray-500 text-white font-bold py-2 px-4 rounded-full m-2" %> 
              <%= render "layouts/flash" %>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <div class="text-center mb-10">
                  <h1 class="font-bold text-3xl text-gray-900">Profile</h1>
                </div>
                
                <div>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  
                  <div class="flex -mx-3">
                     <div class="w-full px-3 mb-5">
                        <%= f.label :email, class:"text-xs font-semibold px-1" %>
                        <div class="flex">
                          <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"><i class="mdi mdi-email-outline text-gray-400 text-lg"></i></div>
                          <%= f.email_field :email, value: current_user.email, class:"w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500" %>
                        </div>
                     </div>
                  </div>
                  <div class="flex -mx-3">
                     <div class="w-full px-3 mb-5">
                        <%= f.label :name, class:"text-xs font-semibold px-1" %>
                        <div class="flex">
                          <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"><i class="mdi mdi-email-outline text-gray-400 text-lg"></i></div>
                          <%= f.text_field :name, value: current_user.name, class:"w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500" %>
                        </div>
                     </div>
                  </div>
                  <div class="flex -mx-3">
                     <div class="w-full px-3 mb-5">
                        <%= f.label :phone, class:"text-xs font-semibold px-1" %>
                        <div class="flex">
                          <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"><i class="mdi mdi-email-outline text-gray-400 text-lg"></i></div>
                          <%= f.number_field :phone,value: current_user.phone, class:"w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500" %>
                        </div>
                     </div>
                  </div>
                  <div class="flex -mx-3">
                     <div class="w-full px-3 mb-12">
                        <%= f.label :image, class:"text-xs font-semibold px-1" %>
                        <div class="flex">
                          <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"><i class="mdi mdi-lock-outline text-gray-400 text-lg"></i></div>
                          <%= f.file_field :image, class:"w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500" %>
                        </div>
                     </div>
                  </div>
                  <div class="flex -mx-3">
                     <div class="w-full px-3 mb-12">
                        <%= f.label :password, class:"text-xs font-semibold px-1" %>
                        <div class="flex">
                          <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"><i class="mdi mdi-lock-outline text-gray-400 text-lg"></i></div>
                          <%= f.password_field :password, class:"w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500" %>
                        </div>
                     </div>
                  </div>
                  <div class="flex -mx-3">
                     <div class="w-full px-3 mb-12">
                        <%= f.label :password_confirmation, class:"text-xs font-semibold px-1" %>
                        <div class="flex">
                          <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"><i class="mdi mdi-lock-outline text-gray-400 text-lg"></i></div>
                          <%= f.password_field :password_confirmation, class:"w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500" %>
                        </div>
                     </div>
                  </div>
                  <div class="flex -mx-3">
                     <div class="w-full px-3 mb-12">
                        <%= f.label :current_password, class:"text-xs font-semibold px-1" %>
                        <div class="flex">
                          <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"><i class="mdi mdi-lock-outline text-gray-400 text-lg"></i></div>
                          <%= f.password_field :current_password, class:"w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500" %>
                        </div>
                     </div>
                  </div>
                  <div class="flex -mx-3">
                     <div class="w-full px-3 mb-5">
                        <%= f.submit "Update", class:"block w-full max-w-xs mx-auto gradient-2 text-black rounded-lg px-3 py-3 font-semibold border" %>
                     </div>
                  </div>
                  
                  <div class="flex -mx-3">
                     <div class="w-full px-3 mb-5">
                        <h3>Cancel my account ? </h3>
                        <p><%= button_to "Delete Account", registration_path(resource_name), data: { turbo_confirm: "Are you sure?" }, method: :delete, class:"bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-full my-2" %></p>  
                      </div>
                  </div>
                  
              </div>
              <% end %>
            </div>
            <div class="hidden md:block w-1/2 gradient-2 px-10 flex">
               <div class="text-center text-black">
                  <br><br><br><br><br>
                  <h2 class="font-bold text-2xl text-black">Profile Picture</h2>
                  <% if current_user.image.attached? %>
                     <%= image_tag current_user.image, class:"w-56 h-56 mx-auto my-5 rounded-full" %>
                  <% else %>
                     <%= image_tag "default_profile", class:"w-56 h-56 mx-auto my-5 rounded-full" %>
                  <% end %>
                  <div class="text-xl">Email: <%= current_user.email %></div>
                  <div class="text-xl">Name: <%= current_user.name %></div>
                  <div class="text-xl">Phone: <%= current_user.phone %></div>
              </div>
            </div>
        </div>
    </div>
</div>
