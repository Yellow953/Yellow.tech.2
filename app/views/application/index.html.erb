              <div class="flex flex-wrap ">
                <div class="sm:w-full pr-4 pl-4 my-2 mt-5">
                  <%= f.text_field :name, class:"contactus", placeholder:"Name" %>
                </div>
                <div class="sm:w-full pr-4 pl-4 my-2">
                  <%= f.email_field :email, class:"contactus", placeholder:"Email" %>
                </div>
                <div class="sm:w-full pr-4 pl-4 my-2">
                  <%= f.text_field :phone, class:"contactus", placeholder:"Phone" %>
                </div>
                <div class="sm:w-full pr-4 pl-4 my-2">
                  <%= f.text_field :message, class:"contactus", placeholder:"Message" %>
                </div>
                <div class="sm:w-full pr-4 pl-4 my-2">
                  <%= button_to "Send", "https://calendly.com/yellow_tech/30min", class:"send", target:"_blank" %>
